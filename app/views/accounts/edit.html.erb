<h1>Rename account number <%= @account.id %></h1>

<%= form_with model: @account do |form| %>
  <%= render "shared/form_errors", form: form %>
  <div class="mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, text: @account.name %>
  </div>

  <div class="mb-3">
    <%= form.submit "Rename account", class: "btn btn-primary" %>
  </div>
<% end %>
